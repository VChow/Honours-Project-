<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textHeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="75sp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:background="#202020"
        android:minWidth="150dp"
        android:minHeight="170dp"
        	android:layout_centerHorizontal="true"
        	android:layout_marginTop="10dp"
        />
    
    <TextView
        android:id="@+id/textBPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="BPM"
        android:textColor="#FFFFFF"
        android:background="#202020"
        android:minWidth="150dp"
        	android:layout_centerHorizontal="true"
        	android:layout_below="@+id/textHeartRate"
        />

    <Button
        android:id="@+id/buttonStartRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="START"
        android:textColor="#FFFFFF"
        android:background="#404040"
        android:minWidth="200dp"
        android:onClick="buttonStartRecord"
        	android:layout_centerHorizontal="true"
        	android:layout_below="@+id/textBPM"
        	android:layout_marginTop="25dp"
        	android:layout_marginBottom="25dp"
        />
    
    <View
            style="@style/Divider"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/buttonStartRecord"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />
    
    <TextView
        android:id="@+id/textResting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="left"
        android:text="Resting Heart Rate Chart:"
        	android:layout_below="@+id/buttonStartRecord"
        	android:layout_alignParentLeft="true"
        	android:layout_marginTop="25dp"
        	android:layout_marginLeft="20dp"
        />
    
    <ImageView 
        android:id="@+id/imageResting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/doge"
        	android:layout_centerHorizontal="true"
        	android:layout_below="@+id/textResting"
        	android:layout_marginTop="10dp"
        />
  
    <View
            style="@style/Divider"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageResting"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />
    
    <TextView
        android:id="@+id/textMaximum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="left"
        android:text="Maximum Heart Rate Chart:"
        	android:layout_below="@+id/imageResting"
        	android:layout_alignParentLeft="true"
        	android:layout_marginTop="25dp"
        	android:layout_marginLeft="20dp"
        />
    
    <ImageView 
        android:id="@+id/imageMaximum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/doge2"
        	android:layout_centerHorizontal="true"
        	android:layout_below="@+id/textMaximum"
        	android:layout_marginTop="10dp"
        />
    
    </RelativeLayout>
</ScrollView>
