<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TextView
        android:id="@+id/textPedometerCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="75sp"
        android:text="000"
        android:textColor="#FFFFFF"
        android:background="#202020"
        android:minWidth="150dp"
        android:minHeight="170dp"
        	android:layout_centerHorizontal="true"
        	android:layout_marginTop="10dp"
        />
    
	<TextView
        android:id="@+id/textSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="STEPS"
        android:textColor="#FFFFFF"
        android:background="#202020"
        android:minWidth="150dp"
        	android:layout_centerHorizontal="true"
        	android:layout_below="@+id/textPedometerCounter"
        />
	
	<Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:minWidth="160dp" 
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:textColor="#FFFFFF"
        android:background="#404040"
        android:onClick="resetPedometer"
        	android:layout_below="@+id/textSteps"
        	android:layout_alignParentLeft="true"
        />
    
    <Button
        android:id="@+id/buttonStartPedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START" 
        android:minWidth="160dp"     
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp" 
        android:textColor="#FFFFFF"
        android:background="#404040"
        android:onClick="startPedometer"
        	android:layout_below="@+id/textSteps" 
        	android:layout_alignParentRight="true"     	
        />
    
    <Button
        android:id="@+id/buttonStopPedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP" 
        android:minWidth="160dp"     
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp" 
        android:textColor="#FFFFFF"
        android:background="#404040"
        android:onClick="stopPedometer"
        android:visibility="invisible"
        	android:layout_below="@+id/textSteps" 
        	android:layout_alignParentRight="true"     	
        />
	
</RelativeLayout>
